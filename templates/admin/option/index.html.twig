{% extends 'base.html.twig' %}

{% block title 'Gérer les options' %}

{% block body %}
<div class="container mt-4">
    <h1>Gérer les options</h1>
    {% for message in app.flashes('succes') %}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}
        
    
        <table class='table'>
            <thead>
                <tr>
                    <th class="text-center">Titre</th>
                    <th colspan="2" class="text-center">Action</th>
                    
                </tr>
            </thead>
            <tbody>
                {% for option in options %}
                <tr class="text-center">
                    <td>{{option.name}}</td>
                    <td> <a href="{{ path('admin.option.edit', { id : option.id }) }}" class='btn btn-secondary'>Editer</a>
                    <a href="{{path('admin.option.delete', {id:option.id})}}" class="btn btn-danger" onclick="return confirm('Etes vous vraiment sûr ? ')">Supprimer</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{path('admin.option.new')}}" class="btn btn-primary">Créer une nouvelle option</a>
            
        </div>
</div>
{% endblock %}
